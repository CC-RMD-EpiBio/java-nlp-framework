<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <name>gov.nih.cc.rmd.gate.Assistance</name>
  <description>Information about dependence on another person or object when performing the activity.</description>
  <version>2019.01.0</version>
  <vendor/>
  <imports>
    <import name="gov.va.vinci.Model"/>
  </imports>
  <types>
        <typeDescription>
          <name>gov.nih.cc.rmd.gate.AssistancePolarity</name>
          <description>does this person need assistance perform this action</description>
          <supertypeName>uima.cas.String</supertypeName>
          <allowedValues>
             <value> <string>True</string> <description/> </value>
             <value> <string>False</string> <description/> </value>
             <value> <string>Unclear</string> <description/> </value>
          </allowedValues>
        </typeDescription>

        <typeDescription>
          <name>gov.nih.cc.rmd.gate.AssistanceSource</name>
          <description>an indication of the type of support the subject requires to complete the activity (Device Only, Person Only, Other)</description>
          <supertypeName>uima.cas.String</supertypeName>
          <allowedValues>
             <value> <string>Person Only</string> <description/> </value>
             <value> <string>Device Only</string> <description/> </value>
             <value> <string>Other</string> <description/> </value>
          </allowedValues>
        </typeDescription>

    <typeDescription>
      <name>gov.nih.cc.rmd.gate.Assistance</name>
      <description>Information about dependence on another person or object when performing the activity.</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>polarity</name>
          <description>does this person need assistance perform this action</description>
          <rangeTypeName>gov.nih.cc.rmd.gate.AssistancePolarity</rangeTypeName>
        </featureDescription>

        <featureDescription>
          <name>source</name>
          <description>an indication of the type of support the subject requires to complete the activity (Device Only, Person Only, Other)</description>
          <rangeTypeName>gov.nih.cc.rmd.gate.AssistanceSource</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  </types>
</typeSystemDescription>
