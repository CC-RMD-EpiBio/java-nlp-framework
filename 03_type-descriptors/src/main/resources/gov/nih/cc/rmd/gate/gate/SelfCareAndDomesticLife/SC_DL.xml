<schema xmlns="http://www.w3.org/2000/10/XMLSchema">
  <!-- XSchema definition for Self-care/Domestic lifeMention -->
  <element name="Self-care/Domestic life">
   <complexType>
          <attribute name="Type" use="optional" value="Objective" >
              <simpleType>
                  <restriction base="string">
                      <enumeration value="Objective"/>
                      <enumeration value="Subjective"/>
                  </restriction>
              </simpleType>
          </attribute>
		  <attribute name="Subject" use="required" value="Patient" >
              <simpleType>
                  <restriction base="string">
                      <enumeration value="Patient"/>
                      <enumeration value="Other"/>
                  </restriction>
              </simpleType>   
          </attribute>
		   <attribute name="Timeline" use="optional" value="Present" >
          <simpleType>
              <restriction base="string">
                  <enumeration value="Future"/>
                  <enumeration value="Past"/>
                  <enumeration value="Present"/>
              </restriction>
          </simpleType>
      </attribute>
      </complexType>
  </element>
</schema>
